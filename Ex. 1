programa
{
  funcao inicio ()
  {
   
    inteiro n1 //declaracão de variável
   
    //atribuir valor à variável 
    escreva ("Digite um número: ")
    leia (n1)
   
    //saber se é ímpar ou par
    se (n1 % 2 == 0) {
      escreva("O número ", n1 , " é par!")
    }
    senao {
      escreva ("O número ", n1 , " é ímpar!")
    }
  }
}

programa {
  inclua biblioteca Matematica --> mat
  funcao inicio() {
  real n1,n2,soma
  cadeia resultado

  escreva("Escreva o primeiro número: ")
  leia(n1)
  escreva("Escreva o segundo número: ")
  leia(n2)    

  escreva("Selecione a operação lógica a ser feita:\n")
  escreva("a-Soma\n")
  escreva("b-Subtração\n")
  escreva("c-Multiplicação\n")
  escreva("d-Divisão\n")
  escreva("e-Resto de Divisão\n")
  escreva("f-Primeiro Número Elevado ao Segundo\n")
  escreva("g-Raiz Quadrada do Segundo Número\n")
  leia(resultado)

  se (resultado=="a"){
    soma=n1+n2
    escreva(soma)
  }
  
  se senao (resultado=="b"){
    soma=n1-n2
    escreva(soma)
  }
  
  se senao (resultado=="c"){
    soma=a*b
    escreva(soma)
  }
  
  se senao(resultado=="d"){
    soma=n1/n2
    escreva(soma)
  }
  
  se senao(resultado=="e"){
    soma=n1%n2
    escreva(soma)
  }
  
  se senao(resultado=="f"){
    soma=mat.potencia(n1,n2)
    escreva(soma)
  }
  
  se senao(resultado=="g"){
    soma=mat.raiz(n2,2)
    escreva(soma)
  }
  
  
  }
}
